library ieee;
use ieee.std_logic_1164.all;
use ieee.numeric_std.all;

entity g03_controller_FSM is
	port(
		turn         : in std_logic;
		legal_play   : in std_logic;
		reset        : in std_logic;
		clk          : in std_logic;
		request_deal : out std_logic;
		done         : out std_logic);
end g03_controller_FSM;